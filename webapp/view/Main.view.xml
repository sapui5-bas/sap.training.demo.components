<mvc:View controllerName="sap.training.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Table items="{/Airlines}">
						<items>
							<ColumnListItem >
								<cells>
									<Text text="{AirlineCode}"/>
									<Text text="{Name}"/>
									<Input value="{Name}" change="onChange"/>
								</cells>
							</ColumnListItem>
						</items>
						<columns>
							<Column>
								<header>
									<Text text="{i18n>firstName}"/>
								</header>
							</Column>
							<Column>
								<header>
									<Text text="{i18n>lastName}"/>
								</header>
							</Column>
							<Column>
								<header>
									<Text text="{i18n>userName}"/>
								</header>
							</Column>
						</columns>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>